<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addcource.AddCourseActivity">

    <EditText
        android:id="@+id/et_identify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        app:layout_constraintTop_toBottomOf="@+id/et_identify" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        app:layout_constraintTop_toBottomOf="@+id/btn_start" />
    <Button
        android:id="@+id/btn_getcourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从网络获取课程"
        app:layout_constraintTop_toBottomOf="@id/btn_login"/>

    <Button
        android:id="@+id/btn_get_course_from_db"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从数据库获取课程"
        app:layout_constraintTop_toBottomOf="@id/btn_getcourse" />

    <ImageView
        android:id="@+id/iv_show"
        android:layout_width="60dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_course_from_db" />

    <TextView
        android:id="@+id/tv_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="8"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_course_from_db" />

    <ProgressBar
        android:id="@+id/pb"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>