<resources>
    <!--Custom AppTheme style-->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--ActionBar color-->
        <item name="colorPrimary">@color/colorPrimary_custom</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark_custom</item>
        <!--Window color-->
        <item name="android:windowBackground">@color/colorAccent_custom</item>
        <item name="actionMenuTextColor">@color/colorPrimary_custom</item>

    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--溢出菜单主题-->
    <style name="AppTheme.PopupOverlay" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item><!--锚点，为true时盖过toolbar-->
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dip</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dip</item>
    </style>

    <!--由于dialog自带的theme主题会限制宽度，这里我自定义-->
    <style name="CusTheme.Dialog.Theme.Dialog" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 模糊 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 全屏 -->
        <item name="android:windowFullscreen">true</item>
        <!--最小宽度-->
        <item name="android:windowMinWidthMinor">90%</item>

    </style>

    <!--启动页风格-->
    <style name="launchTheme" parent="Theme.AppCompat">
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowFullscreen">true</item><!--全屏-->
        <item name="android:navigationBarColor">@android:color/black</item><!--透明导航栏-->
        <item name="android:statusBarColor">@android:color/transparent</item><!--透明状态栏-->
        <item name="android:windowBackground">@drawable/launch_1080</item><!--显示得图片-->
    </style>


    <style name="Base.AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Base.AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
