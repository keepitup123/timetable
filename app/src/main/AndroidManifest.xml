<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breeziness.timetable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_my"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_my_round"
        android:supportsRtl="true"
        android:theme="@style/Base.AppTheme">
        <activity android:name=".launchPage.LaunchActivity"
            android:theme="@style/launchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loginPage.LoginActivity" />
        <activity android:name=".setCurrentWeek.CurrentWeekActivity" />
        <activity android:name=".homePage.HomeActivity" />
        <activity android:name=".addcourse.AddCourseActivity" />
        <activity
            android:name=".main.CourseActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>